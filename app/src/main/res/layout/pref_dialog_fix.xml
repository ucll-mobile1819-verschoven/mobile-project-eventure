<?xml version="1.0" encoding="utf-8"?>

<!-- Layout-Fix for the EditTextPreference Dialog -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:overScrollMode="ifContentScrolls"
    android:theme="@style/AppAlertDialogContent"
    android:background="@drawable/dialog_bg">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:overScrollMode="ifContentScrolls"
        android:theme="@style/AppAlertDialogContent">

        <LinearLayout
            android:id="@+id/edittext_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dialog_alert_default_padding"
            android:paddingEnd="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingStart="22dp"
            android:paddingTop="@dimen/dialog_alert_default_padding">

            <TextView
                android:id="@android:id/message"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dialog_alert_default_padding"
                android:textColor="?android:attr/textColorSecondary"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>